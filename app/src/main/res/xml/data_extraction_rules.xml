<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include alarms and settings in cloud backup -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />

        <!-- Exclude voice recognition models -->
        <exclude domain="file" path="models/" />
    </cloud-backup>

    <device-transfer>
        <!-- Include everything in device transfer -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <exclude domain="file" path="models/" />
    </device-transfer>
</data-extraction-rules>
